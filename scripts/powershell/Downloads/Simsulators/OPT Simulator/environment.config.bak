<appSettings >
  <!--can be overridden by command line arguments-->

  <!-- *** API Server  -->
  <add key="ApiPortNumber" value="12001" />
  <add key="AllowHttpTracing" value="false" />

  <!-- *** Timeouts -->
  
  <!--how long to wait for a shorter API sequence to finish-
      should be long enough for Network & 3rd Party apps (e.g. payment) to respond -->
  <add key="ApiShortTimeoutMs" value="60000" />
  
  <!--how long to wait for a longer API sequence (StartConnection, Complete/Cancel Transaction) to finish-
      should be longer than FuelDeliveryTimeout -->
  <add key="ApiLongTimeoutMs" value="60000" />
  
  <!--how long to await the fuel delivery -
      should be shorter than ApiLongTimeoutMs with enough time between the two to complete the remaining actions (store receipt, payment, printer status)
      but long enough for a fuel delivery to be made using whatever means applicable for test sequence 
      Note: if a fuel delivery is not made, this will delay the transaction (complete or cancel) response 
      if running manually and want to receive a Fuel delivery may need to extend timeout to initiate
      Alternatively, if no delivery is required, or managing the delivery through a test orchestrator, may be able to reduce this to a very low value
      -->
  <add key="FuelDeliveryTimeoutMs" value="30000" />
  
  <!--Internal timeout for physical connection to be established -
      Should be shorter than ApiLongTimeout ideally with enough time between the two to complete the remaining actions including GetConfig-->
  <add key="AwaitConnectionTimeoutMs" value="20000" />

  <!-- *** Api sequences and Ui cycling -->
  <!-- Inter-step delay for cycling & API request sequences -
      lower equates to faster, more frequent checking at the expense of other parts of the system-->
  <add key ="SequenceStepIntervalMilliseconds" value="100"/>

  <!-- Controls the size of the data (in lines) in the cycling engine internal trace before removing earlier messages -->
  <add key ="ApiTraceLineLimit" value="10000"/>

  <!-- ForceTransactions: false = UI cycling & API sequences will abort on failure response from Hydra network, true ignores result and seqeunce will continue-->
  <add key="ForceTransactions" value="false" />

  <!-- *** UI auto populate controls-->
  <add key="OptId" value="TEST1234" />
  <add key="IpAddress" value="127.0.0.1" />
  <add key="PumpNumber" value="1" />
  <add key="AutoStartCycle" value="false" />
  <add key="CycleTransactionDelaySeconds" value="3" />
  
  <!-- Ui Trace message display size -1 for no truncation-->
  <add key="UiTraceMessageTruncationLimit" value="1000" />

  
  <!-- UI trace, absolute max size before wrapping -->
  <add key="UiTraceSizeWrapLimit" value="200000" />

  <!-- *** General settings-->
  <add key="HideHeartBeatLogger" value="true" />
  <add key="CardNumber" value="12****3456" />

  <!-- *** logging-->
  
  <!-- logging of messages, max length of message logged; -1 for no truncation -->
  <add key="LoggingHydraMessageMax" value="1000" />
  <add key="GenerateMessageId" value="false"/>
  <add key="AutoRespondPending" value="false"/>

</appSettings>
