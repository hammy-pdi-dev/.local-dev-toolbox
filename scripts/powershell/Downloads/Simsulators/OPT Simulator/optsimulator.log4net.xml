<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <root>
    <level value="INFO" />
    <appender-ref ref="File_OPTSimulator" />
  </root>

  <appender name="File_OPTSimulator" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString">
      <conversionPattern value="C:\\Logs\\%date{yyyy-MM-dd}\\OptSimulator\\OptSimulator.log" />
    </file>
    <preserveLogFileNameExtension value="true" />
    <datePattern value="'-'yyyy-MM-dd_HH" />
    <staticLogFileName value="true" />
    <rollingStyle value="Date" />
    <appendToFile value="true" />
    <maxSizeRollBackups value="-1" />
    <countDirection value="0" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <acceptOnMatch value="true" />
      <levelMin value="INFO" />
      <levelMax value="FATAL" />
    </filter>
    <layout type="log4net.Layout.PatternLayout"> 
     <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout> 
  </appender>
  
  <logger name="OPTSimulatorForm">
    <level value="ERROR"/>
  </logger>

  <logger name="OPTSimulatorApi">
    <level value="INFO"/>
  </logger>

  <logger name="OPTSimulator">
    <level value="DEBUG"/>
  </logger>

  <logger name="OPTSimulatorCore">
    <level value="INFO"/>
  </logger>
  
  <logger name="ConnectionToHydra">
    <level value="INFO"/>
  </logger>
  
  <logger name="ConnectionFromHydra">
    <level value="INFO"/>
  </logger>
  
  <logger name="ConnectionHeartbeat">
    <level value="ERROR"/>
  </logger>
</log4net>
