<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="File_HydraPOSSimulator" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString" value="C:\Logs\" />
    <datePattern value="yyyy-MM-dd'\\HydraPosSimulator\\HydraPosSimulator'-yyyy-MM-dd_HH'.log'" />
    <staticLogFileName value="false" />
    <preserveLogFileNameExtension value="true" />
    <rollingStyle value="Date" />
    <appendToFile value="true" />
    <maximumFileSize value="2MB" />
    <maxSizeRollBackups value="12" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <acceptOnMatch value="true" />
      <levelMin value="DEBUG" />
      <levelMax value="FATAL" />
    </filter>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
  </appender>

  <root>
    <level value="DEBUG" />
    <appender-ref ref="File_HydraPOSSimulator" />
  </root>

  <logger name="HydraPOSSimulatorForm">
    <level value="DEBUG"/>
  </logger>
  
  <logger name="HydraPOSSimulator">
    <level value="DEBUG"/>
  </logger>
  
  <logger name="ConnectionThread">
    <level value="DEBUG"/>
  </logger>

  <logger name="HydraPOSSimulatorApi">
    <level value="DEBUG"/>
  </logger>

</log4net>
